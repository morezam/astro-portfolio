---
import Overall from '@layouts/Overall.astro';
---

<!-- home={true} -->
<Overall
	home={true}
	title="Mohammadreza Hamzehei: Personal Site"
	description="Mohammadreza Hamzehei: The portfolio site including selected projects and blog posts.">
	<header class="hero">
		<div class="left">
			<div class="title">
				<small class="subtitle">Hi, My name is</small>
				<h1 class="name">Mohammadreza Hamzehei</h1>
			</div>
		</div>
		<div class="right">
			<img class="main-img" src="/assets/main.png" alt="main image" />
		</div>
	</header>

	<style lang="scss">
		.hero {
			display: flex;
			flex-direction: column;
			height: 80vh;
			align-items: center;
			background-color: var(--c-background);
			justify-content: space-around;

			@media (min-width: 600px) {
				height: 100vh;
			}
			@media (min-width: 800px) {
				flex-direction: row;
				justify-content: space-between;
			}
		}
		.right {
			background-repeat: no-repeat;
			background-size: cover;

			@media (min-width: 800px) {
				background-image: url(/assets/shape.svg);
				height: 100%;
				display: flex;
				justify-content: center;
				align-items: center;
			}
		}

		.main-img {
			width: 25rem;
			@media (min-width: 600px) {
				width: 40rem;
			}
			@media (min-width: 800px) {
				width: 45rem;
			}
			@media (min-width: 1100px) {
				width: 60rem;
			}
		}

		.left {
			display: flex;
			align-items: center;
			padding: 1rem;
			margin-top: 10rem;

			@media (min-width: 800px) {
				margin-top: 0;
				padding-left: 1rem;
			}
			@media (min-width: 1000px) {
				padding-left: 4rem;
			}
		}
		.title {
			font-weight: 900;
		}

		.name {
			font-size: 3rem;
			display: block;
			line-height: 1;
			text-align: center;

			@media (min-width: 600px) {
				font-size: 4.5rem;
			}

			@media (min-width: 800px) {
				width: 2rem;
				font-size: 5rem;
				text-align: left;
			}

			@media (min-width: 1100px) {
				font-size: 6.5rem;
			}
		}

		.subtitle {
			font-size: 2rem;
			margin-bottom: 1rem;
			display: block;
			font-weight: 400;
			letter-spacing: -0.0625em;

			@media (min-width: 600px) {
				font-size: 3rem;
			}
		}
	</style>
</Overall>
